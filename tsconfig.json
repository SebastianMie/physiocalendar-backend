{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
